/* 

  flex

 */

 .flex {
   display: flex;
 }

 .flex-wrap {
   display: flex;
   flex-wrap: wrap;
 }

.justify-around {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.justify-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.justify-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.items-center {
  align-items: center
}
/*  球 */

.balls {
  padding: 20rpx;
  border-bottom: 1px solid #ececec;
}

.ball {
  width: 80rpx;
  height: 80rpx;
  background: #fff;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 50%;
  margin: 10rpx;
}

.ball-small {
  width: 58rpx;
  height: 58rpx;
  line-height: 58rpx;
}

.ball:active {
  transform: translate(1rpx, 1rpx);
}

.ball-red {
  color: #f54646;
}

.ball-red.checked {
  background: #f54646;
  color: #fff;
}

.ball-blue {
  color: #39f;
}

.ball-blue.checked {
  background: #39f;
  color: #fff;
}

.shadow-blur::before {
  top: 2rpx;
  left: 2rpx;
}

/* 间隙 */

.padding {
  padding: 30rpx;
}

.footer {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #ececec;
  background: #fff;
  z-index: 100;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 10rpx 30rpx;
  display: flex;
  line-height: 78rpx;
}
.footer-btn {
  text-align: center;
  height: 78rpx;
  line-height: 78rpx;
  color: #fff;
  font-size: 28rpx;
  width: 100%;
  background: #64638f;
  border-radius: 8rpx;
  flex: 1;
}

/* 文字 */

.center {
  text-align: center
}

.gray {
  color: #80848f;
}

.font-small {
  font-size: 24rpx;
}